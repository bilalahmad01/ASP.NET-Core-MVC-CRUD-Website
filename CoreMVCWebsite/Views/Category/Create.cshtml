@model Category   // We are working with Category model and it will create a new object. And by default all the values of that object will be empty.

    <form method="post">
    <div class="border p-3 mt-4">
    <div class="row pb-2">
        <h3 class="text-primary">Create Category</h3>
        <hr />
    </div>
    <div asp-validation-summary="All"></div>
    <div class="row mb-3 p-1">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
        <div class="row mb-3 p-1">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary">Back To Category List</a>
            </div>
        </div>

    </div>
    </form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>      // To use client-side validation partial view.
    }
}